@model List<UGFUpload.Web.Models.Upload.FileInfoViewModel>

@{
    ViewData["Title"] = "Lista de Arquivos";
}

    <div class="text-center">
        <br />
        <h4>Lista de arquivos enviados</h4>
        <br />
        <hr />
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>Nome do arquivo</th>
                    <th>Data/Hora de envio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDateTime)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <a class="btn btn-outline-success" asp-action="Create">
                <i class="fas fa-info-circle"></i> Enviar arquivos
            </a>
        </div>
        <div class="col-sm-3">
            <a class="btn btn-outline-success" asp-action="CompareInfo">Comparação de arquivos</a>
        </div>
    </div>
